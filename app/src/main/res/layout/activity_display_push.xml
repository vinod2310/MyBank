<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".DisplayPushActivity" android:orientation="vertical" android:id="@+id/linearLayout"
              android:backgroundTint="#FFFFFF" android:background="#ffffff">


    <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:layout_marginStart="20dp"
            tools:context=".DisplayPushActivity" android:layout_marginRight="0dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="#ffffff">
        <TextView
                android:id="@+id/transactionTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120px"
                android:layout_marginRight="10px"
                android:layout_marginLeft="10px"
                android:text="Transaction requires your approval"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/transactionFromLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="From account: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                    android:id="@+id/transactionFromValue"
                    android:layout_marginTop="10dp"


                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#009688" android:textColorHighlight="#009688" android:textColorHint="#009688"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/transactionToLabel"
                    android:layout_marginTop="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="To account: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                    android:id="@+id/transactionToVal"
                    android:layout_marginTop="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:text=" "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#009688"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
        >
            <TextView
                    android:id="@+id/transactionAmountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:text="Amount: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                    android:id="@+id/transactionAmountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="fdsfsdfsdfsdfsd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#009688"/>
        </TableRow>
    </TableLayout>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:backgroundTint="#ffffff" android:background="#ffffff">
        <ImageButton
                android:layout_width="123dp"
                android:layout_height="101dp" app:srcCompat="@mipmap/okay"
                android:id="@+id/imageButtonOkay"
                android:onClick="doOkay" app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="144dp" android:backgroundTint="#ffffff" android:layout_marginStart="48dp"/>


        <ImageButton
                android:layout_width="125dp"
                android:layout_height="118dp" app:srcCompat="@mipmap/notokay"
                android:id="@+id/imageButtonnoTOkay"
                android:onClick="doNotOkay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="136dp" app:layout_constraintHorizontal_bias="0.793"
                android:backgroundTint="#ffffff"/>

        <ImageView
                android:src="@mipmap/poweredby"
                android:layout_width="83dp"
                android:layout_height="57dp"
                android:id="@+id/imageView5"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>






