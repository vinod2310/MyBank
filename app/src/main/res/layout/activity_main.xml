<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".MainActivity"
>

    <TextView
            android:layout_width="262dp"
            android:layout_height="86dp"
            android:text="@string/app_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textDesc"
            android:layout_marginBottom="304dp" android:textSize="20sp"
            android:textColor="#177FA3" android:textStyle="bold" android:textAlignment="center"/>
    <TextView
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:text="@string/app_waiting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView2"
            android:layout_marginBottom="60dp" android:textSize="20sp" app:layout_constraintHorizontal_bias="0.636"/>

    <ImageView
            android:src="@mipmap/poweredby"
            android:layout_width="83dp"
            android:layout_height="57dp"
            android:id="@+id/imageView5"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="4dp"/>
    <ImageView
            android:src="@drawable/banklogo"
            android:layout_width="144dp"
            android:layout_height="162dp"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"/>
    <ImageView
            android:src="@drawable/swipeleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="460dp" app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>